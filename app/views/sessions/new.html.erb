<% title "User SignIn" %>

<div class="row">
	<div class="signin-title">
		<h1>Cheque Maker</h1>
		<!--h5>Well known content syndication company worldwide</h5-->
	</div>
	<div class="signin-panel-container">
		<div class="panel panel-signin">
			<div class="panel-heading">
				<h3 class="panel-title user-icon"><span class="fa-stack fa-3x"> <i class="fa fa-circle fa-stack-2x"></i> <i class="fa fa-user fa-stack-1x fa-inverse"></i> </span><span class="text"><%= yield :title%></span></h3>
			</div>
			<div class="panel-body">
				<%= form_tag sessions_path, class: "form-horizontal", role: :form do %>
					<%= render 'layouts/messages' %>
					<div class="form-group">
						<%= label_tag :login, "Username/E-Mail", class: 'col-xs-12 col-sm-4 control-label' %>
						<div class="col-xs-12 col-sm-8">
							<%= text_field_tag :login, params[:login], class: "form-control", placeholder: "Username/E-Mail" %>
						</div>
					</div>
					<div class="form-group">
						<%= label_tag :password, "Password", class: 'col-xs-12 col-sm-4 control-label' %>
						<div class="col-xs-12 col-sm-8">
							<%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-8">
							<div class="checkbox">
								<label>
									<%= check_box_tag :remember_me, 1, params[:remember_me] %>
  									<%= label_tag :remember_me %>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-12">
							<%= submit_tag "Sign In", class: "btn btn-block signin" %>
						</div>
					</div>
				<% end %>
			</div>
			<div class="panel-footer">
				<ul class="nav nav-pills nav-justified">
					<%= content_tag(:li, link_to(fa_stacked_icon("home brown", base: "circle brown-lite", text: "Back to Site"), root_url), :class => 'li_class') %>
					<%= content_tag(:li, link_to(fa_stacked_icon("unlock-alt brown", base: "circle brown-lite", text: "Forget Password"), new_password_reset_path), :class => 'li_class') %>
					<%= content_tag(:li, link_to(fa_stacked_icon("check brown", base: "circle brown-lite", text: "Sign Up"), signup_path), :class => 'li_class') %>
				</ul>
			</div>
		</div>
	</div>
</div>