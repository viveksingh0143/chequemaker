<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  	<div class="alert alert-<%= name == :alert ? "warning" : (name == :notice ? "success" : (name == :error ? "danger" : name)) %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :strong, (name == :alert ? "warning" : (name == :notice ? "success" : (name == :error ? "error" : name))).upcase %>
      <%= msg %>
    </div>
  <% end %>
<% end %>