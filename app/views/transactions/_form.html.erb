<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :payee %>
    <%= f.input :cheque_date %>
    <%= f.input :amount %>
    <%= f.input :account_payee %>
    <%= f.association :user %>
    <%= f.association :bank %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
