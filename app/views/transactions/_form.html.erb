<%= form_for @transaction, html: {class: "form-horizontal", role: :form} do |f| %>
	<%= render 'layouts/messages' %>
	<%= render 'layouts/model_error', :model => @transaction %>
	<div class="form-group">
		<%= f.label :payee, class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= f.text_field :payee, class: "form-control", placeholder: "Payee Name" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :amount, class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= f.text_field :amount, class: "form-control", placeholder: "Amount (INR)" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :cheque_date, class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= f.text_field :cheque_date, 'data-behaviour' => 'datepicker' , class: "form-control", placeholder: "Cheque Date" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :account_payee, class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= f.check_box :account_payee %>
			<%= f.label :yes %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.label :bank, class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= f.select :bank_id, options_for_select(current_user.banks.all.map{|s|[s.name, s.id]}), {}, { :class => 'form-control' } %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= f.submit "Submit", class: "btn btn-block signin" %>
		</div>
	</div>
<% end %>