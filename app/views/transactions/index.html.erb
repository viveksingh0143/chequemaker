<% title "Listing transaction" %>

<table class="table">
  <thead>
    <tr>
      <th>Payee</th>
      <th>Cheque date</th>
      <th>Amount</th>
      <th>Account payee</th>
      <th>Bank</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.payee %></td>
        <td><%= transaction.cheque_date %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.account_payee %></td>
        <td><%= transaction.bank.name %></td>
        <td><%= transaction.user.username %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Download Cheque', transaction_path(transaction.id, :format => 'pdf') %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-primary' %>
